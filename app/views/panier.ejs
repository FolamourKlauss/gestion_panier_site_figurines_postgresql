<%- include('./partials/header.ejs') %>

<div class="col">
  <h3 class="text-center">Votre Panier</h3>

  <table class="table">
    <thead>
      <th>Article</th>
      <th>Quantit√©</th>
      <th>Prix HT</th>
    </thead>
    <tbody>
      <% cart.forEach(figurine => { %>
      <tr>
        <td>
          <img class="img-thumbnail img-cart-list" src="/images/<%= figurine.name.toLowerCase()  %>.png" alt="">
          <div class="item-description">
              <h5 class="item-title"><%= figurine.name  %></h5>
              <p class="item-prize">$<%= figurine.price  %></p>
          </div>
        </td>
        <td>
          <strong><%= figurine.quantity  %></strong>
          <a href="/cart/add/<%= figurine.id %>">+</a> / <a href="/cart/delete/<%= figurine.id %>">-</a>
        </td>
        <td>
          <p class="item-subtotal">$<%= (figurine.quantity * figurine.price).toFixed(2)  %></p>
        </td>
      </tr>
      <% }) %>

      <!-- Frais de port -->
      <tr>
        <td class="text-right" colspan="2">
          Frais de port
        </td>
        <td class="item-subtotal">
          $<%= SHIPPING.toFixed(2) %>
        </td>
      </tr>

      <tfoot>
        <tr>
          <td class="text-right" colspan="2">
            Total HT
          </td>
          <td class="item-subtotal">
            $<%= totalHT.toFixed(2) %>
          </td>
        </tr>

        <tr>
          <td class="text-right" colspan="2">
            TVA <%= TVARATE * 100 %>%
          </td>
          <td class="item-subtotal">
            $<%= TVA.toFixed(2) %>
          </td>
        </tr>

        <tr class="row-total">
          <td class="text-right" colspan="2">
            Total TTC
          </td>
          <td class="item-total">
            $<%= TOTAL.toFixed(2) %>
          </td>
        </tr>

      </tfoot>

    </tbody>

  </table>

  <div class="row">
    <div class="col text-right">
        <div class="btn btn-success">
          Passer Commande
        </div>
    </div>
  </div>

</div>


  <!-- Footer -->
  <%- include('./partials/footer.ejs') %>;
  
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap.native/2.0.15/bootstrap-native-v4.min.js"></script>
  
  </body>
  
  </html>
  